            android:layout_marginStart="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toEndOf="@+id/metrics_input4"
            mstb:mstbColorNotPressedBackground="@color/gray"
            mstb:mstbColorNotPressedText="@color/off_white"
            mstb:mstbColorPressedBackground="@color/colorAccent"
            mstb:mstbColorPressedText="@color/off_white"
            mstb:values="@array/select_array" />

        <TextView
            android:id="@+id/name_title"
            android:layout_width="294dp"
            android:layout_height="159dp"
